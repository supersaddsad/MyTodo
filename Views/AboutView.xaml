<UserControl x:Class="WpfApp1.Views.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:WpfApp1.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="{DynamicResource MaterialDesignBackground}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 标题卡片 -->
        <md:Card Grid.Row="0" 
                Margin="0 0 0 24"
                UniformCornerRadius="8"
                Background="#FFE91E63" 
            md:ElevationAssist.Elevation="Dp2">
            <Grid Margin="24 16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <md:PackIcon Kind="Heart"
                    Width="32" Height="32"
                           Foreground="White"
                           VerticalAlignment="Center"/>

                    <TextBlock Grid.Column="1"
                         Text="霞霞我爱你"
                         Margin="16 0 0 0"
                         Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                         Foreground="White"
                         VerticalAlignment="Center"/>
            </Grid>
        </md:Card>

        <!-- 内容卡片 -->
        <md:Card Grid.Row="1"
                UniformCornerRadius="8"
                md:ElevationAssist.Elevation="Dp3">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                        Padding="32">
                <StackPanel HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          MaxWidth="480">
                    <!-- 应用图标 -->
                    <Border Width="120" Height="120"
                            CornerRadius="60"
                            Background="#FFE91E63" 
                        Effect="{StaticResource MaterialDesignElevationShadow2}">
                        <md:PackIcon Kind="Heart" 
                            Width="64" Height="64"
                                  Foreground="White"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                    </Border>

                    <!-- 应用名称 -->
                    <TextBlock Text="霞霞专属爱语"
                             Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                             Foreground="#FFE91E63"
                             HorizontalAlignment="Center"
                             Margin="0 24 0 8"/>

                    <!-- 版本信息 -->
                    <TextBlock Text="永恒的爱 1.0.0"
                             Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                             Opacity="0.6"
                             HorizontalAlignment="Center"
                             Margin="0 0 0 32"/>

                    <!-- 功能特点 -->
                    <StackPanel Margin="0 0 0 16">
                        <md:Card UniformCornerRadius="4"
                               md:ElevationAssist.Elevation="Dp1"
                               Margin="0 0 0 16">
                            <Grid Margin="16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <md:PackIcon Kind="HeartOutline"
                                          Width="24" Height="24"
                                          Foreground="#FFE91E63" 
                                          VerticalAlignment="Top"
                                          Margin="0 0 16 0"/>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="深情满满"
                                             Style="{StaticResource MaterialDesignSubtitle2TextBlock}"/>
                                    <TextBlock Text="每一个字都饱含着我对你深深的爱意"
                                             Style="{StaticResource MaterialDesignBody2TextBlock}"
                                             Opacity="0.6"
                                             TextWrapping="Wrap"/>
                                </StackPanel>
                            </Grid>
                        </md:Card>

                        <md:Card UniformCornerRadius="4"
                               md:ElevationAssist.Elevation="Dp1"
                               Margin="0 0 0 16">
                            <Grid Margin="16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <md:PackIcon Kind="FlowerOutline"
                                          Width="24" Height="24"
                                          Foreground="#FFE91E63" 
                                          VerticalAlignment="Top"
                                          Margin="0 0 16 0"/>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="温柔相伴"
                                             Style="{StaticResource MaterialDesignSubtitle2TextBlock}"/>
                                    <TextBlock Text="愿我能像温柔的花朵，永远陪伴在你身旁"
                                             Style="{StaticResource MaterialDesignBody2TextBlock}"
                                             Opacity="0.6"
                                             TextWrapping="Wrap"/>
                                </StackPanel>
                            </Grid>
                        </md:Card>

                        <md:Card UniformCornerRadius="4"
                               md:ElevationAssist.Elevation="Dp1"
                               Margin="0 0 0 0">
                            <Grid Margin="16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <md:PackIcon Kind="StarOutline"
                                          Width="24" Height="24"
                                          Foreground="#FFE91E63" 
                                          VerticalAlignment="Top"
                                          Margin="0 0 16 0"/>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="未来同行"
                                             Style="{StaticResource MaterialDesignSubtitle2TextBlock}"/>
                                    <TextBlock Text="期待与你一起走过每一个美好的未来"
                                             Style="{StaticResource MaterialDesignBody2TextBlock}"
                                             Opacity="0.6"
                                             TextWrapping="Wrap"/>
                                </StackPanel>
                            </Grid>
                        </md:Card>
                    </StackPanel>

                    <!-- 分隔线 -->
                    <Separator Style="{StaticResource MaterialDesignLightSeparator}"
                             Margin="0 32"/>

                    <!-- 版权信息 -->
                    <TextBlock Text="© 永远属于霞霞. All rights reserved."
                             Style="{StaticResource MaterialDesignCaptionTextBlock}"
                             Opacity="0.6"
                             HorizontalAlignment="Center"/>

                    <!-- 按钮组 -->
                    <StackPanel Orientation="Horizontal"
                              HorizontalAlignment="Center"
                              Margin="0 24 0 0">
                        <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                Content="诉说更多爱"
                                Margin="8 0"/>
                        
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Content="倾听你的心"
                                Margin="8 0"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </md:Card>
    </Grid>
</UserControl>