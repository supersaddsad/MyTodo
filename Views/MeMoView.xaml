<UserControl x:Class="WpfApp1.Views.MeMoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <md:DialogHost DialogTheme="Inherit">
        <md:DrawerHost IsRightDrawerOpen="{Binding IsRightDrawerOpen}">
            <!-- 右侧抽屉 -->
            <md:DrawerHost.RightDrawerContent>
                <Border Width="400" 
                        Background="{DynamicResource MaterialDesignPaper}"
                        CornerRadius="8 0 0 8"
                        Effect="{StaticResource MaterialDesignElevationShadow8}">
                    <Grid Margin="24">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 标题区 -->
                        <StackPanel Orientation="Horizontal" Margin="0 0 0 16">
                            <md:PackIcon Kind="NotebookEdit" 
                                       Width="28" Height="28"
                                       Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                            <TextBlock Text="新建备忘录"
                                     Margin="8 0 0 0"
                                     Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                     Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        </StackPanel>

                        <!-- 输入区 -->
                        <StackPanel Grid.Row="1">
                            <TextBox Style="{StaticResource MaterialDesignFilledTextBox}"
                                    md:HintAssist.Hint="📌 备忘标题"
                                    md:TextFieldAssist.HasClearButton="True"
                                    Margin="0 0 0 16"
                                    md:HintAssist.HelperText="输入一个简短的标题"
                                    Text="{Binding NewMemo.Title, UpdateSourceTrigger=PropertyChanged}">
                                <TextBox.InputBindings>
                                    <KeyBinding Key="Enter" Command="{Binding SaveCommand}"/>
                                </TextBox.InputBindings>
                            </TextBox>

                            <TextBox Style="{StaticResource MaterialDesignFilledTextBox}"
                                    md:HintAssist.Hint="📝 备忘内容"
                                    TextWrapping="Wrap"
                                    AcceptsReturn="True"
                                    VerticalContentAlignment="Top"
                                    MinHeight="200"
                                    MaxHeight="400"
                                    VerticalScrollBarVisibility="Auto"
                                    md:TextFieldAssist.HasClearButton="True"
                                    md:HintAssist.HelperText="添加详细的备忘内容"
                                    Text="{Binding NewMemo.Content, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <!-- 操作按钮 -->
                        <StackPanel Grid.Row="2" 
                                  Orientation="Horizontal" 
                                  HorizontalAlignment="Right"
                                  Margin="0 16 0 0">
                            <Button Content="取消"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Command="{Binding CloseDrawerCommand}"
                                    Margin="0 0 8 0"/>
                            <Button Content="保存"
                                    MinWidth="120"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Command="{Binding SaveCommand}"
                                    md:ButtonProgressAssist.IsIndicatorVisible="True">
                                <Button.Effect>
                                    <DropShadowEffect BlurRadius="8" 
                                                    ShadowDepth="2"
                                                    Opacity="0.3"/>
                                </Button.Effect>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
            </md:DrawerHost.RightDrawerContent>

            <!-- 主界面 -->
            <Grid Margin="24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 顶部工具栏 -->
                <Grid Margin="0 0 0 24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 标题 -->
                    <StackPanel Orientation="Horizontal">
                        <md:PackIcon Kind="NotebookMultiple" 
                                   Width="32" Height="32"
                                   Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        <TextBlock Text="备忘录"
                                 Margin="8 0 0 0"
                                 Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                 VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- 搜索框 -->
                    <TextBox Grid.Column="1"
                            Width="320"
                            Margin="24 0"
                            Style="{StaticResource MaterialDesignFilledTextBox}"
                            md:HintAssist.Hint="🔍 搜索备忘录..."
                            md:TextFieldAssist.HasClearButton="True"
                            Text="{Binding SearchKeyword, UpdateSourceTrigger=PropertyChanged}"/>

                    <!-- 新建按钮 -->
                    <Button Grid.Column="2"
                            Style="{StaticResource MaterialDesignFloatingActionButton}"
                            Command="{Binding AddCommand}"
                            ToolTip="新建备忘录"
                            Background="{DynamicResource PrimaryHueMidBrush}">
                        <md:PackIcon Kind="Plus" Width="24" Height="24"/>
                    </Button>
                </Grid>

                <!-- 备忘录列表 -->
                <ScrollViewer Grid.Row="1" 
                            VerticalScrollBarVisibility="Auto"
                            Padding="0 8">
                    <ItemsControl ItemsSource="{Binding MemoDtos}"
                                VirtualizingPanel.IsVirtualizing="True"
                                VirtualizingPanel.VirtualizationMode="Recycling">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"
                                          HorizontalAlignment="Center"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <md:Card Margin="8"
                                       Width="320"
                                       UniformCornerRadius="8"
                                       md:ElevationAssist.Elevation="Dp2">
                                    <md:Card.Style>
                                        <Style TargetType="md:Card">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="md:ElevationAssist.Elevation" Value="Dp4"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </md:Card.Style>

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- 标题栏 -->
                                        <Border Background="{DynamicResource PrimaryHueMidBrush}"
                                                Height="40">
                                            <DockPanel Margin="16 0">
                                                <StackPanel Orientation="Horizontal">
                                                    <md:PackIcon Kind="NoteText" 
                                                               Width="20" Height="20"
                                                               Foreground="White"
                                                               VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding Title}" 
                                                             Margin="8 0 0 0"
                                                             FontSize="14"
                                                             Foreground="White"
                                                             FontWeight="Medium"
                                                             VerticalAlignment="Center"
                                                             TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>
                                                
                                                <TextBlock Text="{Binding CreateTime, StringFormat=yyyy-MM-dd HH:mm}"
                                                         Foreground="White"
                                                         Opacity="0.7"
                                                         HorizontalAlignment="Right"
                                                         VerticalAlignment="Center"/>
                                            </DockPanel>
                                        </Border>

                                        <!-- 内容区 -->
                                        <TextBlock Grid.Row="1"
                                                 Text="{Binding Content}"
                                                 Margin="16"
                                                 TextWrapping="Wrap"
                                                 MaxHeight="120"
                                                 TextTrimming="CharacterEllipsis"/>

                                        <!-- 操作栏 -->
                                        <StackPanel Grid.Row="2"
                                                  Orientation="Horizontal"
                                                  HorizontalAlignment="Right"
                                                  Margin="16 0 16 16">
                                            <Button Style="{StaticResource MaterialDesignToolButton}"
                                                    Command="{Binding DataContext.DeleteCommand, 
                                                              RelativeSource={RelativeSource Mode=FindAncestor,
                                                              AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="删除">
                                                <md:PackIcon Kind="Delete" Width="20" Height="20"/>
                                            </Button>
                                            
                                            <Button Style="{StaticResource MaterialDesignToolButton}"
                                                    Command="{Binding DataContext.EditCommand, 
                                                              RelativeSource={RelativeSource Mode=FindAncestor,
                                                              AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="编辑">
                                                <md:PackIcon Kind="Pencil" Width="20" Height="20"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </md:Card>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </md:DrawerHost>
    </md:DialogHost>
</UserControl>