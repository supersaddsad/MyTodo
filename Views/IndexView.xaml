<UserControl x:Class="WpfApp1.Views.IndexView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Views"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="666" d:DesignWidth="800"
             FontFamily="{DynamicResource MaterialDesignFont}">
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 欢迎信息 -->
        <StackPanel>
            <TextBlock Text="欢迎回来，霞霞"
                     Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                     Foreground="{DynamicResource PrimaryHueMidBrush}"/>
            <TextBlock Text="{Binding CurrentDate}"
                     Style="{StaticResource MaterialDesignBody1TextBlock}"
                     Margin="0 8 0 0"
                     Opacity="0.87"/>
        </StackPanel>

        <!-- 统计卡片 -->
        <ItemsControl Grid.Row="1" 
                     ItemsSource="{Binding TaskBars}"
                     Margin="0 24">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="4" HorizontalAlignment="Stretch"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <md:Card Margin="8"
                           UniformCornerRadius="8"
                           Background="{Binding Color}"
                           md:ElevationAssist.Elevation="Dp1">
                        <Grid MinHeight="140">
                            <StackPanel Margin="16">
                                <md:PackIcon Kind="{Binding Icon}"
                                           Width="32" Height="32"
                                           Foreground="White"/>
                                <TextBlock Text="{Binding Title}"
                                         Margin="0 16 0 8"
                                         FontSize="16"
                                         Foreground="White"/>
                                <TextBlock Text="{Binding Content}"
                                         FontSize="32"
                                         FontWeight="Medium"
                                         Foreground="White"/>
                            </StackPanel>
                        </Grid>
                    </md:Card>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- 待办和备忘列表 -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- 待办事项列表 -->
            <md:Card Margin="8"
                    UniformCornerRadius="8"
                    md:ElevationAssist.Elevation="Dp1">
                <DockPanel>
                    <!-- 标题栏 -->
                    <DockPanel DockPanel.Dock="Top" 
                             Margin="16"
                             LastChildFill="True">
                        <Button DockPanel.Dock="Right"
                                Style="{StaticResource MaterialDesignFloatingActionButton}"
                                Command="{Binding AddToDoCommand}"
                                ToolTip="新建待办"
                                Width="40" Height="40">
                            <md:PackIcon Kind="Plus"/>
                        </Button>
                        <TextBlock Text="待办事项"
                                 Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                    </DockPanel>

                    <!-- 列表 -->
                    <ListBox ItemsSource="{Binding ToDoDtos}"
                           Margin="8 0 8 8"
                           HorizontalContentAlignment="Stretch"
                           ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                           ScrollViewer.VerticalScrollBarVisibility="Auto"
                           BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <md:Card Margin="0 4"
                                       UniformCornerRadius="4"
                                       md:ElevationAssist.Elevation="Dp0">
                                    <DockPanel Margin="16 8">
                                        <ToggleButton DockPanel.Dock="Right"
                                                    Style="{StaticResource MaterialDesignActionToggleButton}"
                                                    Width="32" Height="32"
                                                    Padding="0"
                                                    ToolTip="标记完成">
                                            <ToggleButton.Content>
                                                <md:PackIcon Kind="CheckboxBlankOutline"/>
                                            </ToggleButton.Content>
                                           
                                        </ToggleButton>
                                        
                                        <StackPanel Margin="0 0 16 0">
                                            <TextBlock Text="{Binding Title}"
                                                     Style="{StaticResource MaterialDesignSubtitle1TextBlock}"/>
                                            <TextBlock Text="{Binding Content}"
                                                     Style="{StaticResource MaterialDesignBody2TextBlock}"
                                                     TextWrapping="Wrap"
                                                     MaxHeight="40"
                                                     TextTrimming="CharacterEllipsis"
                                                     Opacity="0.6"/>
                                        </StackPanel>
                                    </DockPanel>
                                </md:Card>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </md:Card>

            <!-- 备忘录列表 -->
            <md:Card Grid.Column="1"
                    Margin="8"
                    UniformCornerRadius="8"
                    md:ElevationAssist.Elevation="Dp1">
                <DockPanel>
                    <!-- 标题栏 -->
                    <DockPanel DockPanel.Dock="Top"
                             Margin="16"
                             LastChildFill="True">
                        <Button DockPanel.Dock="Right"
                                Style="{StaticResource MaterialDesignFloatingActionButton}"
                                Command="{Binding AddMemoCommand}"
                                ToolTip="新建备忘"
                                Width="40" Height="40">
                            <md:PackIcon Kind="Plus"/>
                        </Button>
                        <TextBlock Text="备忘录"
                                 Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                    </DockPanel>

                    <!-- 列表 -->
                    <ListBox ItemsSource="{Binding MemoDtos}"
                           Margin="8 0 8 8"
                           HorizontalContentAlignment="Stretch"
                           ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                           ScrollViewer.VerticalScrollBarVisibility="Auto"
                           BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <md:Card Margin="0 4"
                                       UniformCornerRadius="4"
                                       md:ElevationAssist.Elevation="Dp0">
                                    <Grid Margin="16 12">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <DockPanel>
                                            <TextBlock Text="{Binding CreateTime}"
                                                     Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                                     Opacity="0.6"
                                                     DockPanel.Dock="Right"/>
                                            <TextBlock Text="{Binding Title}"
                                                     Style="{StaticResource MaterialDesignSubtitle1TextBlock}"/>
                                        </DockPanel>
                                        
                                        <TextBlock Grid.Row="1"
                                                 Text="{Binding Content}"
                                                 Style="{StaticResource MaterialDesignBody2TextBlock}"
                                                 TextWrapping="Wrap"
                                                 MaxHeight="40"
                                                 TextTrimming="CharacterEllipsis"
                                                 Margin="0 4 0 0"
                                                 Opacity="0.6"/>
                                    </Grid>
                                </md:Card>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </md:Card>
        </Grid>
    </Grid>
</UserControl>
